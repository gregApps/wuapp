<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:layout_marginBottom="@dimen/feed_item_margin"
        android:background="@drawable/feed_background"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/timestamp"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/categories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="289dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

        <VideoView
            android:id="@+id/feedVideo_duel_1"
            android:layout_width="162.5dp"
            android:layout_height="289dp"
            android:background="@color/white"
            android:layout_marginEnd="2.5dp"
            android:layout_marginRight="2.5dp"/>

            <VideoView
                android:id="@+id/feedVideo_duel_2"
                android:layout_width="162.5dp"
                android:layout_height="289dp"
                android:background="@color/white"
                android:layout_marginStart="2.5dp"
                android:layout_marginLeft="2.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="-5dp"
                android:layout_marginStart="-5dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/profilePic_duel_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter" >
                </com.android.volley.toolbox.NetworkImageView>

                 <TextView
                    android:id="@+id/name_duel_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     android:textSize= "30sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/catchphrase_duel"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:gravity="bottom"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="-5dp"
                android:layout_marginEnd="-5dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/profilePic_duel_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter" >
                </com.android.volley.toolbox.NetworkImageView>

                <TextView
                    android:id="@+id/name_duel_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize= "30sp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>